<%- include('../header') %>
<br>

<form method="post" action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>">
        <div class="form-group">
                <label for="titulo">Titulo</label>
                <input placeholder="Coloque
o nome do titulo da publicação" name="titulo"
autofocus type="text" class="form-control"
id="titulo" value="<%= publicacao.titulo %>">
        </div>

       
<div class="form-group">
                <label for="titulo">Conteudo</label>
                <textarea placeholder="Coloque o conteudo aqui"
                name="conteudo" id="conteudo" class="form-control"><%= publicacao.conteudo 
%></textarea>
        </div>



        <button type="submit" class="btn btn-primary">Salvar</button>
</form>

