<%- include('../header') %>
<br>

<form method="post" action="/publicacoes/nova">
	<div class="form-group">	
		<label for="titulo">Titulo</label>
		<input placeholder="Coloque 
o nome do titulo da publicação" name="titulo"
autofocus type="text" class="form-control" 
id="titulo">
	</div>

	<div class="form-group">
                <label for="categoria">Categoria</label>
		<select name="categoria" class="form-control">

		<% categorias.forEach(categoria => { %>
		<option value="<%= categoria.id %>">
			<%=categoria.categoria%>
		</option>
		<% }) %>

		</select>
        </div>



	<div class="form-group">
		<label for="titulo">Conteudo</label>
		<textarea placeholder="Coloque o conteudo aqui"
		name="conteudo" id="conteudo" class="form-control"></textarea>
        </div>



        <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../footer') %>
